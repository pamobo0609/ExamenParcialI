<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcHora"
        android:visibility="invisible"
        android:layout_gravity="right"
        android:layout_marginRight="35dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:onClick="showReloj"
        android:text="Mostrar reloj"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:id="@+id/tbReloj"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowImage"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="35dp"
        android:onClick="showImage"
        android:visibility="invisible"
        android:layout_below="@+id/tbReloj"
        android:layout_alignLeft="@+id/tbReloj"
        android:layout_alignStart="@+id/tbReloj" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Imagen x2!"
        android:layout_marginTop="7dp"
        android:id="@+id/btnMasGrande"
        android:visibility="invisible"
        android:onClick="doubleSize"
        android:layout_alignTop="@+id/btnShowImage"
        android:layout_toRightOf="@+id/btnShowImage"
        android:layout_toEndOf="@+id/btnShowImage" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgS"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/btnShowImage"
        android:layout_alignLeft="@+id/btnShowImage"
        android:layout_alignStart="@+id/btnShowImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lblNombreS"
        android:layout_below="@+id/img"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imgS"
        android:layout_marginRight="7dp"
        android:layout_alignLeft="@+id/btnShowImage"
        android:layout_alignStart="@+id/btnShowImage"
        android:layout_marginTop="113dp" />

    <TextView
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_alignBottom="@+id/imgS"
        android:id="@+id/lblApe1S"
        android:layout_alignTop="@+id/lblNombreS"
        android:layout_toRightOf="@+id/tbReloj"
        android:layout_marginRight="7dp"
        android:layout_toEndOf="@+id/tbReloj" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:visibility="invisible"
        android:id="@+id/lblApe2S"
        android:layout_alignBottom="@+id/lblApe1S"
        android:layout_toRightOf="@+id/lblApe1S"
        android:layout_toEndOf="@+id/lblApe1S" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar campos"
        android:id="@+id/btnClear"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:onClick="clear"
        android:layout_alignBottom="@+id/lblApe2S"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout><!-- From: file:/home/jpmonge/AndroidProjects/ExamenParcialI/res/layout/segundo_examen.xml -->